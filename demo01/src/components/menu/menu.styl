#menu
	position: fixed
	left: -250px
	top: 0
	width: 250px
	height: 100%
	background: rgb(34,38,42)
	transition:all 0.3s
	z-index: 99
	&.show
		left: 0
		transition:all 0.3s
	&>div
		width: 100%
		height: 180px
		background: rgb(42,42,42)
		>div:first-child
			width: 100%
			height: 140px
			padding: 20px 75px
			box-sizing: border-box
			>img
				width: 100%
				height: 100%
				border-radius: 50px
		>div:last-child
			height: 40px
			line-height: 40px
			text-align: center
			color: #fff
			font-family: '微软雅黑'
			font-weight: 900
	ul
		li
			height: 40px
			a
				padding: 12px 60px
				display: block
				box-sizing: border-box
				position: relative
				color: #a6adb3
				border-1px(#40474a)
				i
					position: absolute
					top: 7px
					left: 20px
					background-color: #383c40
					padding: 5px
					border-radius: 13px
				span
					width: 26px
					height: 26px
					line-height: 26px
					text-align: center
					border-radius: 13px
					background: red
					position: absolute
					top: 7px
					right: 10px
					color: #fff
			.router-link-exact-active.router-link-active
				color: #01aef3
				font-weight: 900
				i 
					background-color: #01aef3
					color: #fff


	

