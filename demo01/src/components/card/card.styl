#card
	width: 100%
	height: 100%
	position: relative
	box-sizing: border-box
	font-size: 14px
	img 
		width: 100%
		height: 100%
	>div
		position: absolute
		left: 0
		bottom: 0
		background:rgba(0,0,0,.5)
		padding: 10px
		box-sizing: border-box
		color: #fff
		width: 100%
		>p
			line-height: 20px
			text-indent: 2em
		>div
			padding-top: 10px
			box-sizing: border-box
			overflow: hidden
			font-size: 12px
			>div:first-child
				float: left
			>div:last-child
				float: right

